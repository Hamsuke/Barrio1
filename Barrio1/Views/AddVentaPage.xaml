    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Barrio1.ViewModels"
    Title="Add Venta"
    x:DataType="viewmodel:AddVentaViewModel"
    >
    <VerticalStackLayout Margin="20">
        <Entry Placeholder="Cliente" Text="{Binding VentaCliente}" />
        <Entry Placeholder="Pago (Si no hay ninguno dejar en 0)" Text="{Binding VentaPago}" />
        <Entry Placeholder="Costo" Text="{Binding VentaCosto}" />
        <Button
            Background="#3ece8e"
            Command="{Binding AddVentaCommand}"
            Text="AÃ±adir Venta"
            TextColor="#eff5f3" />
